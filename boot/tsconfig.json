{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "react/*"
      ]
    },
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "es7",
      "es2017.object"
    ]
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "src"
  ]
}
